{
  "manifest_version": 3,
  "name": "Minimal Manifest",
  "version": "1.0.0",
  "description": "A basic example extension with only required keys",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "pages/popup.html"
  },
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "js": [
        "content-scripts/index.iife.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}